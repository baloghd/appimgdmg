#!/usr/bin/make -f

export PYBUILD_NAME=appimg
export DH_VERBOSE=1

%:
	dh $@ --with python3 --buildsystem=pybuild

override_dh_auto_install:
	dh_auto_install
	# Install entry point scripts
	install -D -m 755 debian/appimg/usr/bin/appimg debian/appimg/usr/bin/appimg
	install -D -m 755 debian/appimg/usr/bin/appimg-debug debian/appimg/usr/bin/appimg-debug
	install -D -m 755 debian/appimg/usr/bin/appimg-list debian/appimg/usr/bin/appimg-list
	install -D -m 755 debian/appimg/usr/bin/appimg-sound debian/appimg/usr/bin/appimg-sound

override_dh_python3:
	dh_python3 --shebang=/usr/bin/python3
